#include<iostream>
using namespace std;

int main()
{
    int a=10;
    bool b=true;
    short int  c=12;
    long int d=100000550;
    float e=12.23456788;
    double f=13.234567;
    long double g=1234.765432165432;
    char h='A';

    cout<<sizeof(int)<<" "<< sizeof(bool)<<" "<<sizeof(short int)<<" "<<sizeof(long int)<<endl;
    cout<<sizeof(float)<<" "<< sizeof(double)<<" "<<sizeof(long double)<<" "<<sizeof(char)<<endl;
    cout<<sizeof(a)<<" "<< sizeof(b)<<" "<<sizeof(c)<<" "<<sizeof(d)<<endl;
    cout<<sizeof(e)<<" "<< sizeof(f)<<" "<<sizeof(g)<<" "<<sizeof(h)<<endl;
    
    return 0;
}
